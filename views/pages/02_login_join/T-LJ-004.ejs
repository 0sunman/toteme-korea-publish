<div class="container login_join id_check">
    <div class="template-account__header">
       회원가입
    </div>
    <div class="template-account__wrapper id_check">
       <div class="template-account__left"></div>
       <%- include ("./menu/index.ejs",{state:11}) %>
       <div class="template-account__content">
          <div class="template-login__content">
 
             
            <div class="template-account__text_hdtype_1 alert title" style='display:none'>
               <div class="rte">
                 <p class='error'></p>
               </div>
            </div>
             <div class="section">
                   <form method="post" action="/account/login" id="customer_login" accept-charset="UTF-8">
                      <input type="hidden" name="form_type" value="customer_login"><input type="hidden" name="utf8" value="✓">
                     <div class="name input-block label-block">
                        <label class="form-group__label subtitle-2 is-hidden" for="customerName">
                        </label>
                        <input id="customerName" autocapitalize="off" autocomplete="off" autofocus="" name="customer[customername]" placeholder="이름" required="" spellcheck="false" type="text" data-need='name' data-need-length='3' charOnly>
                     </div>
                     <div class="birthday input-block label-block">
                        <label class="form-group__label subtitle-2 is-hidden" for="CustomerPassword">
                        </label>
                        <input id="birthday" autocapitalize="off" autocomplete="off" autofocus="" name="customer[birthday]" placeholder="생년월일 (숫자 8자리 입력 / 예. 20150115)" required="" spellcheck="false" type="text" data-need='birthday' data-need-length='8' numberOnly>
                     </div>
                     <!--div class="text-block description div-block sub-description input-block">
                        <p>생년월일 8자리를 입력해주세요 (예. 20150115)</p>
                     </div--->
                     <div class="findid button-block loading-wrap">
                        <input class="button button--primary button--block button--large" data-form-submit="doFindid" type="submit" value="아이디 찾기">
                        <div class="loader">
                           <div class="smiley-spin">
                              <svg class="icon icon--medium icon__smiley" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" clip-rule="evenodd" d="M8 15.5a7.5 7.5 0 110-15 7.5 7.5 0 010 15zm0-1a6.5 6.5 0 100-13 6.5 6.5 0 000 13zM4.947 9.776l-.894.448a4.413 4.413 0 007.894 0l-.894-.448a3.413 3.413 0 01-6.106 0zM9.5 5h1v2h-1V5zm-3 0h-1v2h1V5z"></path></svg>
                           </div>
                        </div>
                     </div>

                   </form>

             </div> 
          </div>
       </div>
    </div>
 </div>

 