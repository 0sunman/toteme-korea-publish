   </select>
</div>
<br>
<div>
   <b>상세 설명 항상 보이기 </b> : 
   <select class='select_group4 SWB_select1'>
      <option></option>
      <option>custom-module__content--pinned-description</option>
   </select>
   <br>&nbsp;&nbsp;&nbsp; * 설명을 하버할떄 노출할지 말지 결정
</div>
<br>
<script>
   /*
   
   is-top
   is-middle
   is-bottom
   is-left
   is-center
   is-right
   
   텍스트
   text-medium
   text-large
   text-mini
   .custom-module__background.custom-module__background--is-half .custom-module__background-image-wrapper,.custom-module__background.custom-module__background--is-quarter
   
   
             custom-module__content--pinned-description
             custom-module__content-description
   */
   function resetSelectLayout(selector){
   
   $(selector).removeClass("is-top")
   $(selector).removeClass("is-middle")
   $(selector).removeClass("is-bottom")
   $(selector).removeClass("is-left")
   $(selector).removeClass("is-center")
   $(selector).removeClass("is-right")
   }
   
   
   function resetSelectLayoutText(selector){
   $(selector).removeClass("text-medium")
   $(selector).removeClass("text-large")
   $(selector).removeClass("text-mini")
   }
   
   function resetSelectLayoutBackground(selector){
   $(selector).removeClass("custom-module__background--is-full")
   $(selector).removeClass("custom-module__background--is-half")
   $(selector).removeClass("custom-module__background--is-quarter")
   }
   
   
   function resetSelectLayoutDescription(selector){
   $(selector).removeClass("custom-module__content--pinned-description")
   }
   
   setTimeout(function(){
   
   $("#component_controller input[type='checkbox']").on("click",function(){
    console.log("done");
    ($(".SWB_border1").is(":checked") == true ) ? $(".sectionwithbackground").addClass("custom-module--border-inner-dark") : $(".sectionwithbackground").removeClass("custom-module--border-inner-dark");
    ($(".SWB_border2").is(":checked") == true ) ? $(".sectionwithbackground").addClass("custom-module--border-outer-dark") : $(".sectionwithbackground").removeClass("custom-module--border-outer-dark");
    ($(".SWB_border3").is(":checked") == true ) ? $(".sectionwithbackground").addClass("only_pc") : $(".sectionwithbackground").removeClass("only_pc");
    ($(".SWB_border4").is(":checked") == true ) ? $(".sectionwithbackground").addClass("only_mo") : $(".sectionwithbackground").removeClass("only_mo");
    ($(".SWB_border5").is(":checked") == true ) ? $(".sectionwithbackground").addClass("custom-module--no-crop") : $(".sectionwithbackground").removeClass("custom-module--no-crop");
    
   
   })
   $("#component_controller .select_group1").on("click",function(){
    resetSelectLayout(".sectionwithbackground .custom-module__content-title");
    $(".sectionwithbackground .custom-module__content-title").addClass($(".select_group1.SWB_select1").val())
    $(".sectionwithbackground .custom-module__content-title").addClass($(".select_group1.SWB_select2").val())
   })
   
   
   $("#component_controller .select_group2").on("click",function(){
    console.log("why");
    resetSelectLayoutText(".sectionwithbackground .custom-module__text-link");
    $(".sectionwithbackground .custom-module__text-link").addClass($(".select_group2.SWB_select1").val())
   })
   
   
   $("#component_controller .select_group3").on("click",function(){
    console.log("why");
    resetSelectLayoutBackground(".sectionwithbackground .custom-module__background");
    $(".sectionwithbackground .custom-module__background").addClass($(".select_group3.SWB_select1").val())
   })
   
   $("#component_controller .select_group4").on("click",function(){
    console.log("why");
    resetSelectLayoutDescription(".sectionwithbackground .custom-module__content");
    $(".sectionwithbackground .custom-module__content").addClass($(".select_group4.SWB_select1").val())
   })
   },1000)
          
       
</script>
<style>
